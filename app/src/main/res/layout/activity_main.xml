<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" android:background="#111111">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nim"
                android:textSize="24sp"
                android:hint="nim" android:textColor="#F7F3F3" android:textColorHint="#FDF8F0F0"
                android:layout_marginLeft="8dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nama"
                android:textSize="24sp"
                android:hint="nama" android:textColor="#F3EEEE" android:textColorHint="#F5F0F0"
                android:layout_marginLeft="8dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nilai"
                android:textSize="24sp"
                android:hint="nilai" android:textColor="#F3EDED" android:textColorHint="#F7F3F3"
                android:layout_marginLeft="8dp"/>
        <Button
                android:text="Proses"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_proses"
                android:textSize="18sp"
                android:layout_marginTop="20dp" android:layout_marginLeft="110dp"/>
    </LinearLayout>
</RelativeLayout>
